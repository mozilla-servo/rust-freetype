VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=
EXT_DEPS ?=

ifeq ($(CFG_OSTYPE),linux-androideabi)
RUSTFLAGS += -L./../../android/libfreetype2/.libs
endif

RUST_SRC=$(shell find $(VPATH)/src -type f -name '*.rs')

.PHONY: all clean
all:	librustfreetype.dummy

librustfreetype.dummy: src/freetype.rc $(RUST_SRC) $(EXT_DEPS)
	$(RUSTC) $(RUSTFLAGS) $< --out-dir .
	touch $@

rustfreetype-test: src/freetype.rc $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

check: rustfreetype-test
	./rustfreetype-test

clean:
	rm -f *.o *.a *.so *.dylib *.rlib *.dll *.dummy *-test

